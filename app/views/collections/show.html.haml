.album
  %h2= @album.name
  .inline-links
    -if(current_user.favorite?(@album))
      = link_to 'Remove From Favorites', album_favorite_path(current_user.favorite(@album)), method: :delete
    -else
      = link_to 'Add to Favorites', album_favorites_path(@album), method: :post
    %br
    = link_to 'Edit', edit_collection_path(@collection)
    = link_to 'Destroy', @collection, method: :delete, data: { :confirm => 'Are you sure?' }

%br
= link_to 'Add New Album', new_collection_path
= link_to 'Back', :back